{% extends '::base.html.twig' %}
{% block title 'Kindie - Login' %}
    {% block body %}
        <h1>Login</h1>
        <form method="post" action="{{ url('usuario_comprobar') }}">
            <fieldset>
                <legend>Introduzca los datos de acceso</legend>
                <div class="form-group">
                    <label for="username">Nombre de usuario</label>
                    <input type="text" name="_username"
                           {% if not last_username %}autofocus="1" {% endif %} autocorrect="off"
                           autocapitalize="off" placeholder="Usuario"
                           value="{{ last_username | default('') }}">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" name="_password"
                           {% if last_username %}autofocus="1" {% endif %}
                           >
                </div>
                <button type="submit" class="btn waves-effect waves-light">Entrar en la aplicación</button>
            </fieldset>
        </form>
    {% endblock %}