{% extends '::layout.html.twig' %}
{% block title 'Kindie - Imagen de perfil' %}
    {% block contenido %}
        <h3 class="center">Selecciona nueva imagen de perfil</h3>
        <div class="row">
            <div class="col s12 m6 l4 offset-l4 offset-m3">
                <img src="{{ app.user.imagen }}" class="responsive-img materialboxed">
            </div>
            <div class="col s12 m8 l6 offset-l3 offset-m2">
                <form method="post" action="{{ path('imagen_usuario') }}" enctype="multipart/form-data">
                    <div class="file-field input-field">
                        <input class="file-path validate" type="text"/>
                        <div class="btn blue">
                            <span>File</span>
                            <input type="file" name="upload" required="required"/>
                        </div>
                    </div>
                    <button type="submit" name="subir" class="btn purple accent-4">
                        Subir
                    </button>
                </form>
            </div>
        </div>

    {% endblock %}