{% extends '::layout.html.twig' %}
{% block title 'Kindie | Configuraci√≥n de tu cuenta' %}
    {% block contenido %}
        <h2 class="center">Favoritos</h2>

        <div class="row">
            {% if favoritos %}
                {% for fav in favoritos %}
                    <a href="{{ path('proyecto', {'id':fav.proyecto.id}) }}">
                    <div class="col s12 m6 l2">
                        <div class="card">
                            <div class="card-img">
                                <img src="{{ fav.proyecto.imagenPrincipal }}" class="responsive-img">
                            </div>
                            <div class="card-content">
                                <h6>{{ fav.proyecto.nombre }}</h6>
                                <p>{{ fav.usuario.nombreUsuario }}</p>
                            </div>
                        </div>
                    </div>
                    </a>
                {% endfor %}
            {% endif %}
        </div>
    {% endblock %}