{% extends '::layout.html.twig' %}
{% block title %}Kindie | Gestión de la aplicación{% endblock %}
    {% block contenido %}
        <div class="row">
            <div class="col s12">
                <ul class="tabs">
                    <li class="tab col s3"><a href="#test1">Usuarios</a></li>
                    <li class="tab col s3"><a class="active" href="#test2">Nuevos Proyectos<span class="contador">{{ contador_proyectos }}</span></a></li>
                    <li class="tab col s3"><a href="#test3">Comentarios</a></li>
                </ul>
            </div>
            <div id="test1" class="col s12">
                <h4 class="center">Gestión de usuarios</h4>
                {% if usuarios %}
                <table id="tabla_usuarios" class="display">
                    <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Administrador</th>
                        <th>Creador</th>
                        <th>Colaborador</th>
                        <th>Teléfono</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in usuarios %}
                    <tr>
                        <td>{{ user.nombreUsuario }}</td>
                        <td>{{ user.email }}</td>
                        <td>{% if user.esAdmin %}Si{% else %}No{% endif %}</td>
                        <td>{% if user.esCreador %}Si{% else %}No{% endif %}</td>
                        <td>{% if user.esParticipante %}Si{% else %}No{% endif %}</td>
                        <td>{{ user.telefono }}</td>
                        <td></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% else %}
                    <h4 class="center">No hay usuarios registrados</h4>
                {% endif %}
            </div>
            <div id="test2" class="col s12">
                <h4 class="center">Validación de proyectos</h4>
                {% if proyectos %}
                <table id="tabla_pro" class="display">
                    <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>Descripción corta</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for pro in proyectos %}
                        <tr>
                            <td>{{ pro.nombre }}</td>
                            <td>{{ pro.usuario.nombreUsuario }}</td>
                            <td>{{ pro.descripcionCorta }}</td>
                            <td></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% else %}
                    <h4 class="center">No hay nuevos proyectos que validar</h4>
                {% endif %}
            </div>
            <div id="test3" class="col s12">
                <h4 class="center">Moderación de comentarios</h4>
                <div class="col s12 m10 l8 offset-l2">
                    {% if comentarios %}
                    <table id="tabla_coment" class="display">
                        <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Fecha</th>
                            <th>Comentario</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for coment in comentarios %}
                            <tr>
                                <td>{{ coment.usuario.nombreUsuario }}</td>
                                <td>{{ coment.fecha|date('d/m/Y H:i:s') }}</td>
                                <td>{{ coment.texto }}</td>
                                <td></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% else %}
                        <h4 class="center">No hay comentarios</h4>
                    {% endif %}

                </div>
            </div>
        </div>

    {% endblock %}
{% block scripts %}
    <script>
        $(document).ready( function () {
            $('#tabla_usuarios').DataTable( {
                responsive: true
            } );
            $('#tabla_coment').DataTable( {
                responsive: true
            } );
            $('#tabla_pro').DataTable( {
                responsive: true
            } );
        } );
    </script>
{% endblock %}