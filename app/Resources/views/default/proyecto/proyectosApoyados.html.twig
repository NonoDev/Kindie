{% extends '::layout.html.twig' %}
{% block title %}Kindie | Proyectos apoyados{% endblock %}
    {% block contenido %}
        <section id="principal-apoyados" class="responsive-img" data-type="parallax_section" data-speed="5">
        <h2 class="center">Proyectos apoyados</h2>

        <div class="row">
            {% if apoyados %}
                {% for apo in apoyados %}
            <a href="{{ path('proyecto', {'id':apo.proyecto.id}) }}">
                    <div class="col s12 m6 l2">
                        <div class="card">
                            <div class="card-img">
                                <img src="{{ asset('bundles/app/images/proyectos/demo2_proyectos.jpg') }}" class="responsive-img">
                            </div>
                            <div class="card-content">
                                <h6 class="bold">{{ apo.proyecto.nombre }}<span class="right">{{ apo.cantidad }} â‚¬</span></h6>
                                <p>{{ apo.proyecto.usuario.nombreUsuario }}<span class="right">{{ apo.fecha|date('d/m/Y') }}</span> </p>
                            </div>
                        </div>
                    </div>
                </a>
                {% endfor %}
            {% endif %}
        </div>
        </section>
    {% endblock %}