{% extends '::layout.html.twig' %}
{% block title %}Kindie | Gestión de Imágenes del proyecto{% endblock %}
    {% block contenido %}
        <h3 class="center">Selecciona nueva imagen destacada de tu proyecto</h3>

        <div class="row">
        <div class="col s12 m6 l4 offset-l4 offset-m3">
            <img src="{{ proyecto.imagenPrincipal }}" class="responsive-img materialboxed">
        </div>
        <div class="col s12 m8 l6 offset-l3 offset-m2">
        <form method="post" action="{{ path('imagen_proyecto', {'id':proyecto.id}) }}" enctype="multipart/form-data">
            <div class="file-field input-field">
                <input class="file-path validate" type="text"/>
                <div class="btn blue">
                    <span>File</span>
                    <input type="file" name="upload"/>
                </div>
            </div>
            <button type="submit" name="subir" class="btn purple accent-4">
                Subir
            </button>
        </form>
        </div>
        </div>
    {% endblock %}